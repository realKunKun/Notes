<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pink">

    <TextView
        android:id="@+id/nameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/stateMain"
        android:text="TextView"
        android:textSize="80px"
        android:layout_marginRight="20dp"/>

    <com.example.notes.ui.component.countView
        android:id="@+id/stateMain"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        app:borderWith="10dp"
        app:inner_color="@color/purple_500"
        app:outer_color="@color/yellow"
        app:step_text_color="@color/purple_200"
        app:step_text_size="0sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/timeMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/stateMain"
        android:text="TextView"
        android:textSize="80px"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>