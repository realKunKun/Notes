<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity"
    android:background="@color/cyan">

    <ImageView
        android:id="@+id/detail_picture"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/add_picture" />


    <include
        android:id="@+id/detail_layout"
        layout="@layout/detail_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_picture" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/detail_layout">

        <ImageView
            android:id="@+id/detail_yes"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/confirm" />

        <ImageView
            android:id="@+id/detail_no"
            android:layout_width="165dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cancel" />
    </LinearLayout>

</RelativeLayout>